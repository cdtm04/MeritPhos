<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_direct_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/shape_underline"></RelativeLayout>


        <ImageView
            android:id="@+id/btnLike"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="13dp"
            android:paddingRight="11dp"
            android:src="@drawable/icon_like" />

        <ImageView
            android:id="@+id/btnComment"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnLike"
            android:clickable="true"
            android:longClickable="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/icon_comment" />


        <ImageView
            android:id="@+id/btnOption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="30dp"
            android:paddingRight="13dp"
            android:src="@drawable/icon_option_picture" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/btnLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/ivLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="3dp"
                android:src="@drawable/icon_like_count" />

            <TextView
                android:id="@+id/tvCountLikes"
                style="@style/style_username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivLikeCount"
                android:text="10 millions likes"
                android:textSize="16dp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="ash: Wtf?\nmerit: fuck is the life\nAdd a comment"
        android:textColor="#000000"
        android:textColorLink="@color/usernamecolor"
        android:textSize="16dp" />
</LinearLayout>