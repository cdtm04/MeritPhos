<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themebackgroundcolor"
    android:orientation="vertical">

    <com.merit.myapplication.moduls.ActionBar
        android:id="@+id/abAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.merit.myapplication.moduls.ActionBar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshActivityAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/abAccount">

        <se.emilsjolander.stickylistheaders.StickyListHeadersListView
            android:id="@+id/lvProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#0000"></se.emilsjolander.stickylistheaders.StickyListHeadersListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>