<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.merit.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activities.Login"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ActivityHome"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ActivitySearch"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ActivityActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ActivityAccountGroup"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ActivityCamera"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
        <activity
            android:name=".activities.ActivityOptions"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activities.ActivityAccount"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activities.ActivityActivityGroup"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activities.ActivityHomeGroup"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activities.ActivitySearchGroup"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activities.ActivityDirect"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activities.ActivityRelationship"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activities.ActivityComment"
            android:label="@string/app_name"></activity>
    </application>

</manifest>
